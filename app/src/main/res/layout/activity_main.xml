<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        android:background="#ffffff">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/read_book_background"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.85" android:id="@+id/view"/>

        <ImageView
                android:id="@+id/switch_logo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/switch_logo_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/intro_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro_hello_not_login"
                android:textColor="@color/ui_color_white"
                app:layout_constraintTop_toBottomOf="@id/switch_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:lineSpacingMultiplier="1.5"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/intro_message"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/main_content">
    </FrameLayout>
</android.support.constraint.ConstraintLayout>