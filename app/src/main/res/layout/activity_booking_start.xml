<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_color_white"
        tools:context=".views.activities.BookingStartActivity">
    <Button
            android:id="@+id/booking_ok_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/ui_color_blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/booking_button_text"
            android:gravity="center"
            android:textColor="@color/ui_color_white" />

    <GridView
            android:id="@+id/booking_seat_list"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:numColumns="7"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="6dp"
            android:verticalSpacing="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/booking_ok_button"/>

</android.support.constraint.ConstraintLayout>